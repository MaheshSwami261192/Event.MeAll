<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UserDetailsActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/bottom_img"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5.5"

       >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
            android:layout_weight="1.5"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imgPickCamera"
            android:layout_gravity="top"
            android:elevation="6dp"
            android:src="@drawable/camera_black"
            android:layout_marginEnd="-30dp"
            android:layout_marginTop="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:elevation="5dp"
            android:id="@+id/imgProfile"
            android:src="@drawable/default_profile" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imgPickGallary"
            android:background="@drawable/circular_yellow_background"
            android:src="@drawable/gallery_yellow"
            android:elevation="6dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="-20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="20dp"
        android:weightSum="4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
android:layout_marginEnd="-10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <com.prometteur.myevents.Utils.TextViewCustomFont
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:layout_marginTop="10dp"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/human_yellow"
                        android:layout_gravity="end"
                        android:elevation="10dp"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_gravity="end">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:elevation="10dp"
                        android:src="@drawable/human_yellow"
                        android:layout_gravity="end"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:elevation="15dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:elevation="10dp"
                android:layout_marginStart="-5dp"
                app:cardUseCompatPadding="true"
                android:clipToPadding="false"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="15dp"
                    android:weightSum="5">

                    <com.prometteur.myevents.Utils.TextViewCustomFont
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="User Details"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|start"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/edtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:layout_marginEnd="10dp"
                            android:textSize="15dp"
                            android:layout_marginRight="10dp"
                            android:hint="Enter First Name"
                            android:textColor="@android:color/black"
                            android:background="@color/colorGrayLight"
                            android:layout_gravity="start"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/edtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="5dp"

                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="10dp"
                            android:lines="1"
                            android:singleLine="true"

                            android:textSize="15dp"
                            android:layout_marginRight="10dp"
                            android:hint="Enter Last Name"
                            android:textColor="@android:color/black"
                            android:background="@color/colorGrayLight"
                            android:layout_gravity="start"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        >
                        <com.prometteur.myevents.Utils.TextViewCustomFont
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:text="User Name:"/>

                        <EditText
                            android:id="@+id/edtUserName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:textSize="22dp"
                            android:gravity="center"
                            android:editable="false"
                            android:clickable="false"

                            android:lines="1"
                            android:singleLine="true"

                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:focusable="false"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="@android:color/black"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/edtColor"
                            android:layout_gravity="start"/>



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:layout_weight="1">
            <com.prometteur.myevents.Utils.ButtonCustomFont
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btnSubmit"
                android:textSize="16sp"
                android:text="        SUBMIT        "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:background="@drawable/red_round_button_yello"
                android:padding="5dp"
                android:elevation="6dp"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>